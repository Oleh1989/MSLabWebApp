@model IEnumerable<BookStore.Web.Models.BookViewModel>
@using BookStore.Web.Controllers;

@{
    ViewData["Title"] = "Home Page";
}

<h1>Books</h1>

<div class="main-link">
    @Html.ActionLink("Create new book", nameof(HomeController.AddBook).Replace("Controller", string.Empty))
</div>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.ActionLink("Order", nameof(HomeController.MakeOrder).Replace("Controller", string.Empty), new { id = item.Id })
                @Html.ActionLink("Edit", nameof(HomeController.EditBook).Replace("Controller", string.Empty), new { id = item.Id })
                @Html.ActionLink("Delete", nameof(HomeController.DeleteBook).Replace("Controller", string.Empty), new { id = item.Id })
            </td>
        </tr>
    }
</table>
